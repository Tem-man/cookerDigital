/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.btn {
  position: absolute;
  top: 300px;
  z-index: 999;
  font-size: 66px;
}
.box {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 999;
  height: 300rpx;
  width:100vw;
  display: flex;
 
}
.item {
  background-color: rgb(192, 227, 229);
  margin-left: 10px;
}
.add-time {
  flex: 1;
}
.show-time {
  flex: 3;
}
.set-start {
  flex: 2;
}